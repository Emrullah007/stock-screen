{
  "routes": [
    {
      "route": "/favicon.ico",
      "headers": {
        "cache-control": "must-revalidate, max-age=86400"
      }
    },
    {
      "route": "/favicon-*.png",
      "headers": {
        "cache-control": "must-revalidate, max-age=86400"
      }
    },
    {
      "route": "/apple-touch-icon.png",
      "headers": {
        "cache-control": "must-revalidate, max-age=86400"
      }
    },
    {
      "route": "/stock-icon.svg",
      "headers": {
        "cache-control": "must-revalidate, max-age=86400"
      }
    },
    {
      "route": "/assets/*.css",
      "headers": {
        "content-type": "text/css"
      }
    },
    {
      "route": "/assets/*.js",
      "headers": {
        "content-type": "application/javascript"
      }
    },
    {
      "route": "/api/*",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allowedRoles": ["anonymous"],
      "rewrite": "https://stock-analysis-backend.azurewebsites.net/api/$1"
    },
    {
      "route": "/*",
      "rewrite": "/index.html"
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*.{png,jpg,gif}", "/css/*", "/js/*", "/api/*", "/assets/*", "/*.ico", "/*.png"]
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.azure.com https://*.newsapi.org https://*.azurewebsites.net https://*.azurestaticapps.net https://fonts.googleapis.com https://fonts.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.googleapis.com https://fonts.gstatic.com; img-src 'self' data: https://*; connect-src 'self' https://*.azure.com https://*.newsapi.org https://*.azurewebsites.net https://*.azurestaticapps.net;",
    "cache-control": "must-revalidate, max-age=600"
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "application/javascript",
    ".mjs": "application/javascript",
    ".css": "text/css",
    ".html": "text/html",
    ".png": "image/png",
    ".jpg": "image/jpeg",
    ".svg": "image/svg+xml",
    ".ico": "image/x-icon",
    ".ttf": "font/ttf",
    ".woff": "font/woff",
    ".woff2": "font/woff2"
  }
} 